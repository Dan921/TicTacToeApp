<Page x:Class="TicTacToeApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToeApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Меню" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
            <Button Name="SingleGameButton" Content="Один игрок" Width="100" Height="40" Margin="10" Click="SingleGameButton_Click"></Button>
            <Button Name="MultiGameButton" Content="Два игрока" Width="100" Height="40" Margin="10" Click="MultiGameButton_Click"></Button>
            <Button Name="HistoryButton" Content="История" Width="100" Height="40" Margin="10" Click="HistoryButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
